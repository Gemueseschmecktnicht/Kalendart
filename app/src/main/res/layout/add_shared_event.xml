<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageButton
            android:id="@+id/btnFinalAddSharedEvent"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/txtZeit"
            android:layout_alignTop="@+id/btnDiscard"
            android:src="@drawable/ic_check"
            android:text="Ereignis Hinzufügen"
            android:textColor="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/btnDiscard"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_cancel"
            android:text="Ereignis Verwerfen"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text=" Gemeinsames Ereignis hinzufügen"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:hint="Ereignisname"
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtDatum"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="-95dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/txtDatum"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:inputType="none" />

        <Button
            android:id="@+id/txtZeit"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtDatum"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:inputType="none" />

        <EditText
            android:id="@+id/etxtBeschreibung"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="154dp"
            android:ems="10"
            android:hint="Beschreibung"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAddParameter"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="245dp"
            android:text="+" />

        <CheckBox
            android:id="@+id/yearly2"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="221dp"
            android:text="Jährliches Ereignis (z.B. Geburtstag)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDatumShow"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtDatum"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:text="Datum"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtUhrzeitShow"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtDatum"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp"
            android:text="Uhrzeit"
            android:textSize="18sp" />
</RelativeLayout>
